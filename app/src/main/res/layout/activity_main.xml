<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/search_box"
            android:hint="@string/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <HorizontalScrollView
            android:id="@+id/scrollView_tokens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/tokens_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_tokens"
                    android:textStyle="bold"/>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/settings_btn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/params"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/settings_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:src="@drawable/icn_drop_down"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/classic"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <CheckBox
                android:id="@+id/ignore_case"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ignore_case"/>
            <CheckBox
                android:id="@+id/clip_by_spaces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clip_by_spaces"/>
            <CheckBox
                android:id="@+id/supp_mot_vide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete_mot_vide"/>
            <CheckBox
                android:id="@+id/clip_by_all_special_char"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clip_by_all_special_char"/>
            <CheckBox
                android:id="@+id/clip_by_all_special_char_but_ignore_char"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/ignore_char"/>
            <CheckBox
                android:id="@+id/trim_words_so_it_has_only_7_char"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trim_words_so_it_has_only_7_char"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/calculs_btn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/performance"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/calculs_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:src="@drawable/icn_drop_down"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/calculs_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/block1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="precision ="
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dps" />

                <EditText
                    android:id="@+id/dps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:inputType="number"
                    android:hint="dps"
                    app:layout_constraintBottom_toTopOf="@+id/view"
                    app:layout_constraintEnd_toEndOf="@+id/view"
                    app:layout_constraintStart_toEndOf="@+id/textView" />

                <View
                    android:id="@+id/view"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/dps"/>

                <EditText
                    android:id="@+id/ds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:inputType="number"
                    android:hint="ds"
                    app:layout_constraintEnd_toEndOf="@+id/view"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/view" />

                <TextView
                    android:id="@+id/precision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="= NC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds"
                    app:layout_constraintStart_toEndOf="@+id/ds"
                    app:layout_constraintTop_toTopOf="@+id/dps"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/block2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/block1"
                >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rappel ="
                    android:textSize="15sp"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dps1" />

                <EditText
                    android:id="@+id/dps1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:inputType="number"
                    android:hint="dps"
                    app:layout_constraintBottom_toTopOf="@+id/view1"
                    app:layout_constraintEnd_toEndOf="@+id/view1"
                    app:layout_constraintStart_toEndOf="@+id/textView1" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/textView1"
                    app:layout_constraintTop_toBottomOf="@+id/dps1"/>

                <EditText
                    android:id="@+id/ds1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:inputType="number"
                    android:hint="ds"
                    app:layout_constraintEnd_toEndOf="@+id/view1"
                    app:layout_constraintStart_toEndOf="@+id/textView1"
                    app:layout_constraintTop_toBottomOf="@+id/view1" />

                <TextView
                    android:id="@+id/precision1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="= NC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds1"
                    app:layout_constraintStart_toEndOf="@+id/ds1"
                    app:layout_constraintTop_toTopOf="@+id/dps1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/block3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/block1"
                app:layout_constraintTop_toBottomOf="@id/block1">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bruit ="
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dps2" />

                <TextView
                    android:id="@+id/dps2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/view2"
                    app:layout_constraintEnd_toEndOf="@+id/view2"
                    app:layout_constraintStart_toEndOf="@+id/textView2" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/dps2" />

                <TextView
                    android:id="@+id/ds2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/view2"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <TextView
                    android:id="@+id/eq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="="
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds2"
                    app:layout_constraintStart_toEndOf="@+id/ds2"
                    app:layout_constraintTop_toTopOf="@+id/dps2" />

                <TextView
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="1 + "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds2"
                    app:layout_constraintStart_toEndOf="@+id/eq"
                    app:layout_constraintTop_toTopOf="@+id/dps2" />

                <TextView
                    android:id="@+id/precision_result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="NC"
                    app:layout_constraintBottom_toBottomOf="@+id/ds2"
                    app:layout_constraintStart_toEndOf="@+id/one"
                    app:layout_constraintTop_toTopOf="@+id/dps2" />


                <TextView
                    android:id="@+id/precision2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="= NC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds2"
                    app:layout_constraintStart_toEndOf="@+id/precision_result"
                    app:layout_constraintTop_toTopOf="@+id/dps2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/block1"
                app:layout_constraintTop_toBottomOf="@id/block3">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="silence ="
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dps3" />

                <TextView
                    android:id="@+id/dps3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/view3"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintStart_toEndOf="@+id/textView3" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/dps3" />

                <TextView
                    android:id="@+id/ds3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />

                <TextView
                    android:id="@+id/eq2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="="
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds3"
                    app:layout_constraintStart_toEndOf="@+id/ds3"
                    app:layout_constraintTop_toTopOf="@+id/dps3" />

                <TextView
                    android:id="@+id/one2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="1 + "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds3"
                    app:layout_constraintStart_toEndOf="@+id/eq2"
                    app:layout_constraintTop_toTopOf="@+id/dps3" />

                <TextView
                    android:id="@+id/silence_result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="NC"
                    app:layout_constraintBottom_toBottomOf="@+id/ds3"
                    app:layout_constraintStart_toEndOf="@+id/one2"
                    app:layout_constraintTop_toTopOf="@+id/dps3" />


                <TextView
                    android:id="@+id/precision3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="= NC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ds3"
                    app:layout_constraintStart_toEndOf="@+id/silence_result"
                    app:layout_constraintTop_toTopOf="@+id/dps3" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageButton
        android:id="@+id/add_Doc"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@null"
        android:src="@drawable/icn_add"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/total_docs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_Doc" />

    <TextView
        android:id="@+id/selected_docs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_docs" />
</androidx.constraintlayout.widget.ConstraintLayout>